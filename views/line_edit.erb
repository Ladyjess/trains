<h1>Update <%=@line.line_info() %> </h1>

<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="line_info">Rename your line:</label>
  <input id="line_info" name="line_info" type="text">

  <button type="submit">Update</button>
</form>

<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete line</button>
</form>
